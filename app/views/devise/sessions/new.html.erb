<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=>"form-horizontal"}) do |f|%>
  <div class="control-group"><%= f.label :email, :html=> {:class=> "control-label"}%><div class="controls">
  <%= f.email_field :email %>
    </div></div>

    <div class="control-group"><%= f.label :password, :html=> {:class=> "control-label"} %><div class="controls">
  <%= f.password_field :password %></div></div>

  <% if devise_mapping.rememberable? -%>
        <div class="control-group">
          <div class="controls">

            <%= f.label :remember_me, :html=>{:class=>"checkbox inline"} do%>
                <%= f.check_box :remember_me %>
                Remember Me
            <% end %>
          </div>
        </div>
  <% end -%>

    <div class="control-group">
      <div class="controls"><%= f.submit "Sign in", :html=>{:class=>"btn"} %><br><br><%= render "devise/shared/links" %></div> </div>
<% end %>


